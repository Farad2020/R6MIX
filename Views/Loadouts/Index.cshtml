@model IEnumerable<R6MIX.Models.Loadout>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrimaryWeapon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrimaryWeaponImg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SecondaryWeapon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SecondaryWeaponImg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gadget)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GadgetImg)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrimaryWeapon)
            </td>
            <td>
                <img src="@item.PrimaryWeaponImg" style="width: 150px; height:auto;"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SecondaryWeapon)
            </td>
            <td>
                <img src="@item.SecondaryWeaponImg" style="width: 150px; height:auto;"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gadget)
            </td>
            <td>
                <img src="@item.GadgetImg" style="width: 150px; height:auto;"/>
            </td>
            <td>
                <a class="btn btn-sm btn-dark" asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                <a class="btn btn-sm btn-dark" asp-action="Details" asp-route-id="@item.Id">Details</a> 
                <a class="btn btn-sm btn-dark" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
