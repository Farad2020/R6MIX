@model IEnumerable<R6MIX.Models.Loadout>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrimaryWeapon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrimaryWeaponImg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SecondaryWeapon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SecondaryWeaponImg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gadget)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GadgetImg)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrimaryWeapon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrimaryWeaponImg)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SecondaryWeapon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SecondaryWeaponImg)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gadget)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GadgetImg)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
